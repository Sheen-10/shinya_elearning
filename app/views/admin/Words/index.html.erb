<body class="admin-detail">
    <div class="container pt-4 mx-auto">
        <div class="row text-center">
            <div class=" jumbotron col-md-12 col-md-offset-3 pt-4 pb-3 mb-0 home-content">
                <div class="offset-md-3 col-md-6">
                    <div class="word-category-title text-center">
                        <%= @category.title %>
                    </div>
                    <div class="word-category-discription text-center mt-2 mb-3">
                        <%= @category.description %>
                    </div>
                    <div class="text-center category-title-button">
                        <%= link_to 'New Words', new_admin_category_word_path, class:"index_list btn btn-light mt-2" %>
                    </div>
                    <div class="row">
                        <table class="table table-bordered index-table mt-4 mb-3">
                            <tr class="index-text-title">
                                <th width="300">Word</th>
                                <th width="300">Answer</th>
                                <th width="300">Settings</th>
                            </tr>
                            <% @words.each do |word| %>
                            <tr>
                                <td class="index-text-content"><%= word.content%></td>
                                <td class="index-text-content"><%= word.correct_answer%></td>
                                <th width="150" class="index-text-content-edit-delete">
                                    <%= link_to "Edit",edit_admin_category_word_path(@category,word), class: "#"%> /
                                    <%= link_to "Delete", admin_category_word_path(@category,word), method: :delete , class: "#",data: { confirm: "Are you sure you want to delete this word?"} %>
                                </th>
                            </tr>
                            <% end %>
                        </table>
                        <%= link_to 'Back', admin_categories_path, class:"index_list btn btn-light mt-2" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>