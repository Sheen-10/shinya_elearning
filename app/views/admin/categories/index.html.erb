<body class="admin-category">
    <div class="container pt-4 mx-auto">
        <div class="row text-center">
            <div class=" jumbotron col-md-12 col-md-offset-3 pt-4 pb-3 mb-0">
                <div class="offset-md-3 col-md-6">
                    <h1 class="category-title">Administer Categories</h1>
                    <div class="text-center category-title-button">
                        <a class="btn-block btn-lg btn-info mt-4" href="/admin/categories/new">New Category</a>
                    </div>
                    <div class="row">
                        <table class="table table-bordered index-table mt-4">
                            <tr class="index-text-title">
                                <th width="110">Title</th>
                                <th width="500">Description</th>
                                <th width="200">Settings</th>
                            </tr>
                            <% @categories.each do |category| %>
                            <tr>
                                <td class="index-text-content"><%= category.title %></td>
                                <td class="index-text-content"><%= category.description%></td>
                                <th width="150" class="index-text-content-edit-delete">
                                    <%= link_to "Edit", edit_admin_category_path(category), class: "#"%> /
                                    <%= link_to "Delite", admin_category_path(category), method: :delete , class: "#"%>
                                </th>
                            </tr>
                            <% end %>
                        </table>
                    </div>
                <div>
                <nav aria-label="pagination">
                    <div class="pagination justify-content-center mt-3">
                        <%= will_paginate %>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</body>