<body class="lesson-answer">
    <div class="container pt-4">
        <div class="row">
            <div class="jumbotron col-md-12 col-md-offset-3 pt-4 pb-5">
                <div class="offset-md-3 col-md-6 text-center">
                    <div class="answer-title mt-3">
                        <h1><%= @category.title %></h1>
                    </div>
                    <div class="index">
                        <div class="lesson_count answer-title-count">
                            <h6 class="text-center"><%= @lesson.words.count + 1 %> /
                            <%= @category.words.count%></h6>
                        </div>
                        <div class="lesson_word answer-title-count-word">
                            <h2 class="text-center"><%= @lesson.next_word.content %></h2>
                            <% @lesson.next_word.choices.each do |choice| %>
                                <%= form_for([@lesson, @answer]) do |f| %>
                                    <%= f.hidden_field :word_id, value: choice.word_id %>
                                    <%= f.hidden_field :choice_id, value: choice.id %>
                                    <%= f.submit choice.content, class: "btn btn-info mt-4 answer-title-count-word-button" %>
                                <% end %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


