<body class="lesson-result">
    <div class="container pt-4 mx-auto">
        <div class="row text-center">
            <div class=" jumbotron col-md-12 col-md-offset-3 pt-4 pb-3 mb-0">
                <div class="offset-md-3 col-md-6">
                    <h1 class="category-title mb-4"><%= @lesson.category.title %></h1>
                    <div class="row">
                        <div class="col-sm-6 text-right mt-2 result-count">
                            <h6><strong>Total correct answers are <%= @lesson.result %>/<%= @lesson.category.words.size %></strong></h6>
                        </div>
                        <table class="table table-bordered index-table mt-1">
                            <tr class="index-text-title">
                                <th width="150">Words</th>
                                <th width="350">Your Answer</th>
                                <th width="350">Correct Answer</th>
                                <th width="130">Result</th>
                            </tr>
                            <% @answers.each do |answer| %>
                            <tr>
                                <td class="index-text-content"><%= answer.word.content %></td>
                                <td class="index-text-content"><%= answer.choice.content %></td>
                                <td class="index-text-content"><%= answer.word.correct_answer %></td>
                                <td class="index-text-content">
                                <% if  answer.choice.content == answer.word.correct_answer %>
                                    <i class="fas fa-check-circle"></i>
                                <% else %>
                                    <i class="fas fa-times-circle"></i>
                                <% end %>
                                </td>
                            </tr>
                            <% end %>
                        </table>
                    </div>
                    <nav aria-label="pagination">
                        <div class="pagination justify-content-center mt-3">
                            <%= will_paginate @answers %>
                        </div>
                    </nav>
                <div>
            </div>
        </div>
    </div>
</body>